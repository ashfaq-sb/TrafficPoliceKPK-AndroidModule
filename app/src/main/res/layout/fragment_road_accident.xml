<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">
            <ImageView
                android:layout_width="189dp"
                android:layout_height="189dp"
                android:id="@+id/imageViewAccident"
                android:layout_gravity="left|top"
                android:background="#6e2d2d" />


            <Button
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Picture"
                android:id="@+id/btnCameraAccident"
                android:layout_gravity="right|top"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageViewAccident" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Vehicle No:"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/VehicleNoChalan"
                    android:layout_above="@+id/EVchallanNo"
                    android:layout_alignStart="@+id/DistrictChalan" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/EVvehicleNoAccident"
                    android:width="190dp"
                    android:layout_above="@+id/EVchallanNo"
                    android:layout_alignStart="@+id/EVchallanNo"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="District:"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/DistrictAccident"
                     />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/district"
                    android:id="@+id/EVdistrictAccident"
                    android:layout_column="2" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discription:"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView3"
                    android:layout_alignParentStart="true"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/EVdiscriptionAccident"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Road:"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/RoadAccident"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/EVRoadAccident"
                    android:width="190dp"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/LocationAccident"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/EVlocationAccident"
                    android:width="190dp"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Road Accident"
                    android:id="@+id/btnAccident"
                    android:onClick="SendAccident"

                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_column="2"
                    android:layout_weight="1" />
            </TableRow>

        </TableLayout>
    </ScrollView>
</RelativeLayout>